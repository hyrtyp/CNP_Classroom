<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/cnp_school_layout_margin"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/comment_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cnp_school_text_size_min"
            android:textColor="@color/cnp_text_color"
            android:singleLine="true"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cnp_school_text_size"
            android:textColor="@color/cnp_text_color"
            android:singleLine="true"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/text_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cnp_school_text_size"
            android:textColor="@color/cnp_text_color"
            android:singleLine="true"
            android:text="@string/app_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment_huifu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textSize="@dimen/cnp_school_text_size_min"/>
    </LinearLayout>
</LinearLayout>