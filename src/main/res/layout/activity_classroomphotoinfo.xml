<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cnp_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/cnp_school_layout">

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/classroomindex_teacher" />

        <TextView
            android:id="@+id/text_albumname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cnp_school_layout_margin"
            android:textSize="@dimen/cnp_school_text_size"
            android:textColor="@color/cnp_text_color"
            android:text="专辑名称：班级专辑" />

        <TextView
            android:id="@+id/text_photoname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cnp_school_layout_margin"
            android:textSize="@dimen/cnp_school_text_size"
            android:textColor="@color/cnp_text_color"
            android:text="照片名称：发奖状" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/cnp_school_layout_margin"
            android:background="@color/cnp_line_color"
            />

        <EditText
            android:id="@+id/edit_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="5"
            android:layout_marginTop="@dimen/cnp_school_layout_margin"
            android:background="@drawable/shape_sendword_line"
            android:padding="3dp"
            android:gravity="top"
            android:textColor="@color/cnp_text_color"
            android:textSize="@dimen/cnp_school_text_size"/>

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发  送"
            android:textColor="@color/cnp_background"
            android:background="@color/actionbar_bg"
            android:textSize="@dimen/cnp_school_text_size"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/cnp_school_layout_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/cnp_school_layout_margin"
            android:background="@color/cnp_line_color" />
    </LinearLayout>

    <ListView
        android:id="@+id/commit_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/cnp_school_layout_margin"
        style="@style/cnp_school_layout"
        android:layout_marginBottom="@dimen/cnp_school_layout_margin"
        android:background="@drawable/cnp_bg" />
</LinearLayout>